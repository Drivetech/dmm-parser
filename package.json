{
  "name": "dmm-parser",
  "version": "0.0.3",
  "description": "Parser for latitude and longitude in DMM format",
  "main": "src",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "pretest": "npm run lint -s && npm run format -s",
    "commit": "commit",
    "test": "istanbul cover _mocha"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/dmm-parser.git"
  },
  "keywords": [
    "nmea",
    "parser",
    "dmm",
    "coordinates"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/dmm-parser/issues"
  },
  "homepage": "https://github.com/lgaticaq/dmm-parser#readme",
  "dependencies": {
    "pad": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/prompt-cli": "7.2.1",
    "chai": "4.2.0",
    "eslint": "5.11.1",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.3.1",
    "istanbul": "0.4.5",
    "lint-staged": "8.1.0",
    "mocha": "5.2.0",
    "prettier-standard": "8.0.1"
  },
  "eslintConfig": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "tonicExampleFilename": "example.js"
}
